<h2>Market Size & Growth Analysis</h2>

<p><strong>Current Market Size:</strong> {{ current_size_value }} ({{ current_size_year }}), {{ geographic_scope }}</p>

<div class="two-col">
    <div>
        <h3>Historical Growth (2020-2024)</h3>
        <table>
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Market Size</th>
                    <th>YoY Growth</th>
                </tr>
            </thead>
            <tbody>
                {% for hist in historical %}
                <tr>
                    <td>{{ hist.year }}</td>
                    <td>{{ hist.size }}</td>
                    <td>{{ hist.growth }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div>
        <h3>Projections (2025-2028)</h3>
        <table>
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Projected Value</th>
                    <th>Growth Rate</th>
                    <th>Confidence</th>
                </tr>
            </thead>
            <tbody>
                {% for proj in projections %}
                <tr>
                    <td>{{ proj.year }}</td>
                    <td>{{ proj.value }}</td>
                    <td>{{ proj.growth }}</td>
                    <td><span class="confidence confidence-{{ proj.confidence }}">{{ proj.confidence|title }}</span></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="two-col">
    {% if growth_drivers %}
    <div>
        <h4>Growth Drivers</h4>
        <ul>
            {% for driver in growth_drivers %}
            <li><strong>{{ driver.name }}</strong> ({{ driver.impact }}) — {{ driver.description }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
    {% if growth_inhibitors %}
    <div>
        <h4>Growth Inhibitors</h4>
        <ul>
            {% for inhibitor in growth_inhibitors %}
            <li><strong>{{ inhibitor.name }}</strong> ({{ inhibitor.impact }}) — {{ inhibitor.description }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
</div>

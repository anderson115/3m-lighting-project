# Social Video Collection Module - Environment Configuration
# Copy to .env and configure, or use 1Password secret injection

# Apify API Token (for TikTok/Instagram scraping)
# Get from: https://console.apify.com/account/integrations
# Stored in: 1Password → Development vault → "Apify_API_Key"
APIFY_TOKEN=your_apify_token_here

# Optional: BrightData API Token (for advanced scraping)
# Stored in: 1Password → Development vault → "BrightData_API_Token"
BRIGHTDATA_API_TOKEN=your_brightdata_token_here

# Local Model Paths (configured in __init__.py, override if needed)
WHISPER_MODEL_PATH=/Volumes/TARS/llm-models/whisper/large-v3.pt
LLAVA_MODEL_PATH=/Volumes/TARS/llm-models/llava/
OLLAMA_MODELS=/Volumes/TARS/llm-models/ollama/

# Processing Configuration
MAX_WORKERS=4              # Parallel processing workers
FRAME_INTERVAL=3           # Extract 1 frame every N seconds
WHISPER_DEVICE=cpu         # cpu or cuda or mps
